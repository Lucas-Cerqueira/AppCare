<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="80dp"
    android:padding="6dip"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp"
    android:background="@drawable/layout_rounded_primary">

    <TextView
        android:id="@+id/patientName"
        android:layout_width="139dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="5dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:fontFamily="@string/roboto_light"
        android:gravity="center"
        android:text="Patient name"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/reminderType"
        android:layout_width="127dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:fontFamily="@string/roboto_light"
        android:gravity="center"
        android:text="Reminder's type"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/reminderDateTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="10dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@string/roboto_light"
        android:gravity="center"
        android:maxLines="1"
        android:text="Data e hora"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/reminderName"
        android:layout_width="168dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:fontFamily="@string/roboto_light"
        android:gravity="center"
        android:text="Reminder's name"
        android:textColor="@color/white"
        android:textSize="20sp" />

</RelativeLayout>